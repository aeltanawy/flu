<p id="notice"><%= notice %></p>

<div class="left-container">
<h1>State Population</h1>
</div>

<div class="right-container">
  <%= form_tag(flu_mortality2016s_path, method: :get) do %>
    <%= label_tag(:filter_id, "Enter a state:") %>
    <%= text_field_tag(:filter_id, params[:filter_id]) %>
    <%= submit_tag("Filter") %>
  <% end %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="20%">State</th>
      <th width="20%">2016</th>
      <th width="20%">2015</th>
      <th width="20%">2014</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_populations.each do |state_population| %>
      <tr>
        <td><%= state_population.state.name %></td>
        <td><%= state_population.year_2016 %></td>
        <td><%= state_population.year_2015 %></td>
        <td><%= state_population.year_2014 %></td>
        <td><%= link_to 'Show', state_population %></td>
        <td><%= link_to 'Edit', edit_state_population_path(state_population) %></td>
        <td><%= link_to 'Destroy', state_population, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State Population', new_state_population_path %>
