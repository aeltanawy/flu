<h1>Drug Mortality 2015</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>State</th>
      <th>Deaths</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drug_mortality2015s.each do |drug_mortality2015| %>
      <tr>
        <td><%= drug_mortality2015.state.name %></td>
        <td><%= drug_mortality2015.deaths %></td>
        <td><%= link_to 'Show', drug_mortality2015 %></td>
        <td><%= link_to 'Edit', edit_drug_mortality2015_path(drug_mortality2015) %></td>
        <td><%= link_to 'Destroy', drug_mortality2015, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

