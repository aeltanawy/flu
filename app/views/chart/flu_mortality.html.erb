<div style="width:100%;">
  <script src="http://code.highcharts.com/mapdata/countries/us/us-all.js">
    $(function () {
      Highcharts.mapChart('container', {
        chart: {
          map: 'countries/us/us-all',
          borderWidth: 1
        },
        title: {
          text: '2014'
        },
        legend: {
          layout: 'horizontal',
          borderWidth: 0,
          backgroundColor: 'rgba(255,255,255,0.85)',
          floating: true,
          verticalAlign: 'top',
          y: 25
        },
        mapNavigation: {
          enabled: true
        },
        colorAxis: {
          min: 1,
          type: 'logarithmic',
          minColor: '#EEEEFF',
          maxColor: '#000022',
          stops: [
            [0, '#EFEFFF'],
            [0.67, '#4444FF'],
            [1, '#000022']
          ]
        },
        series: [{
          animation: {
              duration: 1000
          },
          data: <%= raw @map_2014 %>,
          dataLabels: {
            enabled: true,
            color: '#FFFFFF',
            format: '{point.code}'
          },
          name: 'Flu 2014 Mortality',
          tooltip: {
            pointFormat: '{point.code}: {point.value}'
          }
        }]
      });
    });
  </script>
</div>

<div id="container" style="width:100%; height:500px;">
  <script type="text/javascript">
    $(function () {
      var myChart = Highcharts.chart('container', {
        chart: {
          type: 'column'
        },
        title: {
          text: 'Flu Mortality by US state'
        },
        xAxis: {
          title: {
            text: 'US States'
          },
          categories: <%= raw @state_names %>
        },
        yAxis: {
          title: {
            text: 'Number of Deaths'
          },
        },
        series: [{
          name: '2016',
          data: <%= raw @flu_2016_deaths %>
        }, {
          name: '2015',
          data: <%= raw @flu_2015_deaths %>
        }, {
          name: '2014',
          data: <%= raw @flu_2014_deaths %>
        }]
      });
    });
  </script>
</div>
